{% extends 'base.html.twig' %}

{% block title %}Hello DeckController!{% endblock %}

{% block body %}
<div class="js-filter">
    <div id="body-deck">

        <div id="bloc-deck">
            <h2>Deck</h2>
            
                <table>
                <tr class="table-primary">
                    <th>titre</th>
                    <th>date création</th>
                    <th>Créé par</th>
                </tr>
                {% for deck in decks %}
                    {% if not deck.Closed or is_granted("ROLE_ADMIN") %}
                    <tr>
                        <td><a href="{{ path('show_deck', {'id': deck.id}) }}">{{deck.title}}</a></td>
                        <td>{{deck.createdAt|date('d-m-Y')}}</td>
                        <th>{{deck.User}}</th>
                    </tr>
                    
                    {% endif %}
                    
                {% endfor %}
            </table>
            
        </div>
        
    </div> 
</div>

{% endblock %}
