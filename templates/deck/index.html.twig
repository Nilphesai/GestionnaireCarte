{% extends 'base.html.twig' %}

{% block title %}Hello DeckController!{% endblock %}

{% block body %}
<div class="js-filter">
    <div id="body-deck">

        <div id="bloc-deck">
            <h2>Deck</h2>
            <a href="{{ path('new_deck')}}">crée un nouveau Deck</a>

            
            
                <table>
                <tr class="table-primary">
                    <th>titre</th>
                    <th>date création</th>
                    <th>public</th>
                </tr>
                {% for deck in decks %}
                <tr>
                    <td><a href="{{ path('update_deck', {'id': deck.id}) }}">{{deck.title}}</a></td>
                    <td>{{deck.createdAt|date('d-m-Y')}}</td>
                    <td>{{deck.Closed}}</td>
                </tr>
                    
                {% endfor %}
            </table>
            
        </div>
        
    </div> 
</div>

{% endblock %}
