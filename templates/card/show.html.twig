{% extends 'base.html.twig' %}

{% block title %}Hello ApiController!{% endblock %}

{% block body %}
    <h1> Detail Carte</h1>

        
            {% for card in card.data %}
            {{dump(card)}}
            <div id="image-carte">{#<img src="{{card.card_images[0].image_url}}">#}</div>
            <div class="carac">
                <h2>{{ card.name }}</h2>
                <p>{{ card.type }}</p>
        
            
                {% if card.frameType == "normal" or card.frameType == "effect" or card.frameType == "ritual" or card.frameType == "fusion" or card.frameType == "synchro" or card.frameType == "xyz" or card.frameType == "link" %}
                    
                    
                        {% if card.frameType == "normal" or card.frameType == "effect" or card.frameType == "ritual" or card.frameType == "fusion" or card.frameType == "synchro" %}
                        Niveau/Rang : {{ card.level }}<br>
                        attaque : {{ card.atk }}<br>
                        Défense : {{ card.def }}<br>
                        {% elseif card.frameType == "link" %}
                        Lien : {{ card.linkval }}<br>
                        Pointe vers :
                            {% for linkmarker in card.linkmarkers %}
                            <p>{{ linkmarker }}</p>
                            {% endfor %}
                        {% endif %}
                {% elseif card.frameType == "spell" or card.frameType == "trap" %}
                    {{ card.race }}
                    {{ card.desc }}
                {% endif %}
                {% for typeline in card.typeline %}
                    {% if typeline == "Pendulum" %}
                        <P>Attribut : {{ card.attribute }}<br>
                        Niveau/Rang : {{ card.level }}<br>
                        attaque : {{ card.atk }}<br>
                        Défense : {{ card.def }}<br>
                        Echelle : {{ card.scale }}<br>
                        {% if card.pend_desc is defined %}
                            effet pendule : {{ card.pend_desc }}</br>
                        {% endif %}
                        {% if card.monster_desc is defined %}
                            effet monstre : {{ card.monster_desc }}</br>
                        {% else %}
                            {{ card.desc }}
                        {% endif %}
                    {% endif %}
                {% endfor %}
            
            </p>
            </div>
            
            {% endfor %}
{% endblock %}
