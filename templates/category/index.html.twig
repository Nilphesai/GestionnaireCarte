{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
<div class="js-filter">
    <h2>Forum</h2>
              
        {% for category in categories %}
            <div class="category">
                <a href="{{ path('app_topic', {'idCateg': category.id}) }}">{{category.name}}</a>
            </div>
        {% endfor %}  
</div>

{% endblock %}
